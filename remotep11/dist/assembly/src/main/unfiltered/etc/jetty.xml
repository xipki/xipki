<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//
DTD Configure//EN" "http://jetty.mortbay.org/configure.dtd">

<Configure class="org.eclipse.jetty.server.Server">

    <!-- =========================================================== -->
    <!-- Set connectors                                              -->
    <!-- =========================================================== -->
    <!-- One of each type!                                           -->
    <!-- =========================================================== -->

    <New id="sslContextFactory" class="org.eclipse.jetty.util.ssl.SslContextFactory">
        <Set name="KeyStore">etc/tls-server-keystore.jks</Set>
        <Set name="KeyStoreType">JKS</Set>
        <Set name="KeyStorePassword">1234</Set>
        <Set name="KeyManagerPassword">1234</Set>
        <Set name="TrustStore">etc/tls-p11server-truststore.jks</Set>
        <Set name="TrustStorePassword">1234</Set>
        <Set name="NeedClientAuth">true</Set>
        <Set name="IncludeProtocols">
            <Array type="java.lang.String">
                <Item>TLSv1.2</Item>
                <Item>TLSv1.1</Item>
            </Array>
        </Set>
        <Set name="IncludeCipherSuites">
            <Array type="java.lang.String">
                <Item>TLS_DHE_RSA_WITH_AES_256_CBC_SHA</Item>
                <Item>TLS_DHE_RSA_WITH_AES_128_CBC_SHA</Item>
            </Array>
        </Set>
    </New>

    <Call name="addConnector">
        <Arg>
            <New class="org.eclipse.jetty.server.ssl.SslSelectChannelConnector">
                <Arg><Ref id="sslContextFactory"/></Arg>
                <Set name="host">
                    <Property name="jetty.host" />
                </Set>
                <Set name="Port">
                    <SystemProperty name="my.https.port" default="8443"/>
                </Set>
                <Set name="maxIdleTime">30000</Set>
                <Set name="Acceptors">1</Set>
                <Set name="AcceptQueueSize">100</Set>
            </New>
        </Arg>
    </Call>

	<!-- =========================================================== -->
    <!-- Configure Authentication Realms                             -->
    <!-- Realms may be configured for the entire server here, or     -->
    <!-- they can be configured for a specific web app in a context  -->
    <!-- configuration (see $(jetty.home)/contexts/test.xml for an   -->
    <!-- example).                                                   -->
    <!-- =========================================================== -->
    <Call name="addBean">
      <Arg>
        <New class="org.eclipse.jetty.plus.jaas.JAASLoginService">
		  <Set name="name">karaf</Set>
          <Set name="loginModuleName">karaf</Set>
		  <Set name="roleClassNames">
			<Array type="java.lang.String">
                          <Item>org.apache.karaf.jaas.boot.principal.RolePrincipal</Item>
			</Array>
		  </Set>
        </New>
      </Arg>
    </Call>
    <Call name="addBean">
      <Arg>
        <New class="org.eclipse.jetty.plus.jaas.JAASLoginService">
                  <Set name="name">default</Set>
          <Set name="loginModuleName">karaf</Set>
                  <Set name="roleClassNames">
                        <Array type="java.lang.String">
                          <Item>org.apache.karaf.jaas.boot.principal.RolePrincipal</Item>
                        </Array>
                  </Set>
        </New>
      </Arg>
    </Call>

</Configure>
