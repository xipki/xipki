<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>ca-group</artifactId>
    <groupId>org.xipki.pki</groupId>
    <version>2.0.1-SNAPSHOT</version>
  </parent>
  <artifactId>ncm-client</artifactId>
  <packaging>bundle</packaging>
  <name>XiPKI :: ${project.artifactId}</name>
  <description>XiPKI net CA management client</description>
  <dependencies>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>ncm-common</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.caucho</groupId>
      <artifactId>hessian</artifactId>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <configuration>
          <instructions>
            <Import-Package>
    com.caucho.burlap.client;resolution:=optional,
    com.caucho.burlap.io;resolution:=optional,
    com.caucho.hessian;resolution:=optional,
    com.caucho.hessian.client;resolution:=optional,
    com.caucho.hessian.io;resolution:=optional,
    com.caucho.hessian.jmx;resolution:=optional,
    com.caucho.hessian.micro;resolution:=optional,
    com.caucho.hessian.mux;resolution:=optional,
    com.caucho.hessian.security;resolution:=optional,
    com.caucho.hessian.util;resolution:=optional,
    com.caucho.services.client;resolution:=optional,
    com.caucho.services.message;resolution:=optional,
    com.caucho.services.name;resolution:=optional,
    org.xipki.pki.ca.api.profile;resolution:=optional,
    *
            </Import-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
