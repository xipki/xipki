<?xml version="1.0" encoding="UTF-8"?>
<web-app>
  <display-name>XiPKI HSM Proxy Web Application</display-name>
  <session-config>
    <session-timeout>60</session-timeout>
  </session-config>
  <filter>
    <filter-name>hsmproxy-filter</filter-name>
    <filter-class>org.xipki.hsmproxy.servlet.HsmProxyServletFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>hsmproxy-filter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>
