<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.xipki</groupId>
    <artifactId>xipki-parent</artifactId>
    <version>6.6.0-SNAPSHOT</version>
  </parent>
  <groupId>org.xipki.servlet</groupId>
  <artifactId>servlet-parent</artifactId>
  <packaging>pom</packaging>
  <name>XiPKI :: ${project.artifactId}</name>
  <properties>
    <skipDeploy>true</skipDeploy>
    <log4j.dir>../shared/filtered</log4j.dir>
  </properties>
  <modules>
    <module>servlet-common</module>
    <!-- CA -->
    <module>ca-servlet</module>
    <!-- OCSP -->
    <module>ocsp-servlet</module>
    <!-- Gateway -->
    <module>gateway-servlet</module>
    <!-- Dummy servlet for CRL download and CtLog -->
    <module>dummy-servlet</module>
  </modules>
  <build>
    <resources>
      <resource>
        <directory>${log4j.dir}</directory>
        <filtering>true</filtering>
        <includes>
          <include>log4j2.properties</include>
        </includes>
      </resource>
    </resources>
  </build>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.bouncycastle</groupId>
        <artifactId>bcutil-jdk18on</artifactId>
        <scope>provided</scope>
      </dependency>
      <dependency>
        <groupId>org.bouncycastle</groupId>
        <artifactId>bcprov-jdk18on</artifactId>
        <scope>provided</scope>
      </dependency>
      <dependency>
        <groupId>org.bouncycastle</groupId>
        <artifactId>bcpkix-jdk18on</artifactId>
        <scope>provided</scope>
      </dependency>
      <dependency>
        <groupId>jakarta.servlet</groupId>
        <artifactId>jakarta.servlet-api</artifactId>
        <scope>provided</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>
</project>
