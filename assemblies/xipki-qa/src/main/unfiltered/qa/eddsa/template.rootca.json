{
    "basedir":"APP_DIR",
	"properties":{
		"ca.signerConf":"REPLACEME-CA_SIGNERCONF",
		"keycerts.dir":"xipki/keycerts",
		"output.dir":"output",
		"profiles.dir":"qa/certprofile",
		"token.type":"REPLACEME-TOKEN_TYPE"
	},
	"signers":[{
		"name":"responder1",
		"type":"pkcs12",
		"conf":{
			"value":"password=1234,keystore=file:${keycerts.dir}/tlskeys/server/tls-server.p12,algo=SHA256withRSA"
		}
	}],
	"requestors":[{
		"name":"requestor1",
		"type":"cert",
		"binaryConf":{
			"file":"${keycerts.dir}/tlskeys/client/tls-client-cert.der"
		}
	},{
		"name":"requestor-mac1",
		"type":"pbm",
		"conf":{
			"value":"123456"
		}
	}],
	"users":[{
		"name":"user1",
		"active":true,
		"password":"password1"
	}],
	"publishers":[{
		"name":"ocsp-publisher",
		"type":"ocsp",
		"conf":{
			"value":"datasource=ocsp,publish.goodcerts=true"
		}
	}],
	"profiles":[{
		"name":"ed25519",
		"type":"xijson",
		"conf":{
			"file":"${profiles.dir}/certprofile-ed25519.json"
		}
	},{
		"name":"ed448",
		"type":"xijson",
		"conf":{
			"file":"${profiles.dir}/certprofile-ed448.json"
		}
	},{
		"name":"x25519",
		"type":"xijson",
		"conf":{
			"file":"${profiles.dir}/certprofile-x25519.json"
		}
	},{
		"name":"x448",
		"type":"xijson",
		"conf":{
			"file":"${profiles.dir}/certprofile-x448.json"
		}
	},{
		"name":"rootca",
		"type":"xijson",
		"conf":{
			"file":"${profiles.dir}/certprofile-rootca.json"
		}
	},{
		"name":"subca",
		"type":"xijson",
		"conf":{
			"file":"${profiles.dir}/certprofile-subca.json"
		}
	}],
	"cas":[{
		"name":"rootca1",
		"aliases":[
			"rootca"
		],
		"caInfo":{
			"caUris":{
				"cacertUris":[
					"http://myorg.org/rootca1.der"
				],
				"crlUris":[
					"http://rootca.myorg.org/crl"
				],
				"ocspUris":[
					"http://localhost:8080/ocsp/responder1"
				]
			},
			"cmpControl":{
				"send.ca":true,
				"messagetime.bias":300,
				"rr.aki.required":true,
				"group.enroll":true,
				"protection.sigalgo":"SHA256withRSA",
				"popo.sigalgo":"Ed25519:Ed448:DHPOP-X25519"
			},
			"cmpResponderName":"responder1",
			"duplicateKey":true,
			"duplicateSubject":true,
			"expirationPeriod":365,
			"genSelfIssued":{
				"csr":{
					"file":"${output.dir}/rootca1.csr"
				},
				"profile":"rootca",
				"serialNumber":"1"
			},
			"keepExpiredCertDays":-1,
			"maxValidity":"10y",
			"nextCrlNo":2,
			"permissions":["all"],
			"protocolSupport":["cmp","rest"],
			"saveReq":true,
			"signerType":"${token.type}",
			"signerConf":{
				"value":"${ca.signerConf}"
			},
			"snSize":20,
			"status":"active",
			"validityMode":"cutoff"
		},
		"profiles":[
			"subca"
		],
		"publishers":[
			"ocsp-publisher"
		],
		"requestors":[{
			"ra":true,
			"requestorName":"requestor1",
			"permissions":[
				"all"
			],
			"profiles":[
				"all"
			]
		},{
			"ra":true,
			"requestorName":"requestor-mac1",
			"permissions":[
				"all"
			],
			"profiles":[
				"all"
			]
		}]
	}]
}

