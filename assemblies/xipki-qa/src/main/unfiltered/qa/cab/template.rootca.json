{
    "basedir":"APP_DIR",
	"properties":{
		"ca.signerConf":"REPLACEME-CA_SIGNERCONF",
		"keycerts.dir":"xipki/keycerts",
		"output.dir":"output",
		"profiles.dir":"qa/certprofile",
		"token.type":"REPLACEME-TOKEN_TYPE"
	},
	"signers":[{
		"name":"responder1",
		"type":"pkcs12",
		"conf":{
			"value":"password=1234,keystore=file:${keycerts.dir}/tlskeys/server/tls-server.p12,algo=REPLACEME-CMP_SIGALGO"
		}
	}],
	"requestors":[{
		"name":"requestor1",
		"type":"cert",
		"binaryConf":{
			"file":"${keycerts.dir}/tlskeys/client/tls-client-cert.der"
		}
	},{
		"name":"requestor-mac1",
		"type":"pbm",
		"conf":{
			"value":"123456"
		}
	}],
	"users":[{
		"name":"user1",
		"active":true,
		"password":"password1"
	}],
	"publishers":[{
		"name":"ocsp-publisher",
		"type":"ocsp",
		"conf":{
			"value":"datasource=ocsp,publish.goodcerts=true"
		}
	}],
	"profiles":[{
		"name":"cab-individual-validated",
		"type":"xijson",
		"conf":{
			"file":"${profiles.dir}/certprofile-cab-individual-validated.json"
		}
	},{
		"name":"cab-org-validated",
		"type":"xijson",
		"conf":{
			"file":"${profiles.dir}/certprofile-cab-org-validated.json"
		}
	},{
		"name":"cab-domain-validated",
		"type":"xijson",
		"conf":{
			"file":"${profiles.dir}/certprofile-cab-domain-validated.json"
		}
	},{
		"name":"cab-rootca",
		"type":"xijson",
		"conf":{
			"file":"${profiles.dir}/certprofile-cab-rootca.json"
		}
	},{
		"name":"cab-subca",
		"type":"xijson",
		"conf":{
			"file":"${profiles.dir}/certprofile-cab-subca.json"
		}
	}],
	"cas":[{
		"name":"rootca1",
		"aliases":[
			"rootca"
		],
		"caInfo":{
			"caUris":{
				"cacertUris":[
					"http://myorg.org/rootca1.der"
				],
				"crlUris":[
					"http://localhost:8080/crl/?type=crl&name=rootca1"
				],
				"ocspUris":[
					"http://localhost:8080/ocsp/responder1"
				]
			},
			"cmpControl":{
				"send.ca":true,
				"send.certchain":false,
				"messagetime.bias":300,
				"rr.aki.required":true,
				"group.enroll":true,
				"protection.sigalgo":"REPLACEME-CMP_SIGALGO"
			},
			"popoControl":{
				"value":"sigalgo=REPLACEME-SIGALGO:REPLACEME-HASHwithRSA:REPLACEME-HASHwithECDSA:REPLACEME-HASHwithDSA:SM3withSM2"
			},
			"cmpResponderName":"responder1",
			"keypairGenNames":["software"],
			"expirationPeriod":365,
			"genSelfIssued":{
				"subject":"REPLACEME-SUBJECT",
				"profile":"cab-rootca",
				"serialNumber":"1"
			},
			"keepExpiredCertDays":-1,
			"maxValidity":"10y",
			"nextCrlNo":2,
			"permissions":["all"],
			"protocolSupport":["cmp","rest"],
			"saveRequest":true,
			"signerType":"${token.type}",
			"signerConf":{
				"value":"${ca.signerConf}"
			},
			"snSize":20,
			"status":"active",
			"validityMode":"cutoff"
		},
		"profiles":[
			"cab-subca"
		],
		"publishers":[
			"ocsp-publisher"
		],
		"requestors":[{
			"ra":true,
			"requestorName":"requestor1",
			"permissions":[
				"all"
			],
			"profiles":[
				"all"
			]
		},{
			"ra":true,
			"requestorName":"requestor-mac1",
			"permissions":[
				"all"
			],
			"profiles":[
				"all"
			]
		}]
	}]
}

