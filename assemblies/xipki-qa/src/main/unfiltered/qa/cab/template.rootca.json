{
	"basedir":"APP_DIR",
	"properties":{
		"ca.signerConf":"REPLACEME-CA_SIGNERCONF",
		"keycerts.dir":"xipki/keycerts",
		"output.dir":"output",
		"profiles.dir":"qa/certprofile"
	},
	"signers":[],
	"requestors":[{
		"name":"requestor1",
		"type":"cert",
		"binaryConf":{
			"file":"${keycerts.dir}/ra-sdk-client-cert.pem"
		}
	}],
	"publishers":[{
		"name":"ocsp-publisher",
		"type":"ocsp",
		"conf":{
			"value":"datasource=ocsp,publish.goodcerts=true"
		}
	}],
	"profiles":[{
		"name":"cab-individual-validated",
		"type":"xijson",
		"conf":{
			"file":"${profiles.dir}/certprofile-cab-individual-validated.json"
		}
	},{
		"name":"cab-org-validated",
		"type":"xijson",
		"conf":{
			"file":"${profiles.dir}/certprofile-cab-org-validated.json"
		}
	},{
		"name":"cab-domain-validated",
		"type":"xijson",
		"conf":{
			"file":"${profiles.dir}/certprofile-cab-domain-validated.json"
		}
	},{
		"name":"cab-rootca",
		"type":"xijson",
		"conf":{
			"file":"${profiles.dir}/certprofile-cab-rootca.json"
		}
	},{
		"name":"cab-subca",
		"type":"xijson",
		"conf":{
			"file":"${profiles.dir}/certprofile-cab-subca.json"
		}
	}],
	"cas":[{
		"name":"rootca1",
		"aliases":[
			"rootca"
		],
		"caInfo":{
			"caUris":{
				"cacertUris":[
					"http://myorg.org/rootca1.der"
				],
				"crlUris":[
					"http://localhost:8081/crl/?type=crl&name=rootca1"
				],
				"ocspUris":[
					"http://localhost:8080/ocsp/responder1"
				]
			},
			"keypairGenNames":["software"],
			"expirationPeriod":365,
			"genSelfIssued":{
				"subject":"REPLACEME-SUBJECT",
				"profile":"cab-rootca",
				"serialNumber":"1"
			},
			"keepExpiredCertDays":-1,
			"maxValidity":"10y",
			"nextCrlNo":2,
			"permissions":["all"],
			"saveCert":true,
			"saveKeypair":false,
			"signerType":"pkcs12",
			"signerConf":{
				"value":"${ca.signerConf}"
			},
			"snSize":20,
			"status":"active",
			"validityMode":"cutoff"
		},
		"profiles":[
			"cab-subca"
		],
		"publishers":[
			"ocsp-publisher"
		],
		"requestors":[{
			"requestorName":"requestor1",
			"permissions":["all"],
			"profiles":["all"]
		}]
	}]
}

