<?xml version="1.0" encoding="UTF-8"?>
<PKCS11Conf xmlns="http://xipki.org/xipki/pkcs11/conf/v1">
  <modules defaultModule="abc">
    <module name="abc">
      <nativeLibraries>
        <nativeLibrary>
          <path>etc/keystore-p11</path>
        </nativeLibrary>
      </nativeLibraries>
      <excludeSlots>
        <!-- Slot 0 is the management slot -->
        <slot>
          <index>0</index>
        </slot>
      </excludeSlots>      
      <passwords>
        <password>
          <singlePassword>1234</singlePassword>
        </password>
      </passwords>
    </module>
  </modules>
</PKCS11Conf>
